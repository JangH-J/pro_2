<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.pro_2.member_mapper.MemberMapper">
  <insert id="member_input_ok" parameterType="kr.co.pro_2.member_vo.MemberVO">
    insert into member(userid,pwd,name,email,phone,writeday)
    values(#{userid},#{pwd},#{name},#{email},#{phone},now());
  </insert>
  <select id="userid_check" resultType="Integer">
  	select count(*) from member where userid=#{param1}
  </select>
  
  <select id="login_ok" parameterType="kr.co.pro_2.member_vo.MemberVO" resultType="kr.co.pro_2.member_vo.MemberVO">
  	select * from member where userid=#{userid} and pwd=#{pwd}
  </select> 
  
  <select id="userid_search" resultType="String" parameterType="kr.co.pro_2.member_vo.MemberVO">
    select userid from member where name=#{name} and email=#{email}
 </select>
 
 <select id="pwd_search" resultType="String" parameterType="kr.co.pro_2.member_vo.MemberVO">
    select pwd from member 
    where name=#{name} and email=#{email} and userid=#{userid}
 </select> 
 
 <select id="nickname_check" resultType="Integer">
  	select count(*) from member where nickname=#{param1}
  </select>
  
  <select id="nickname_search" resultType="String" parameterType="kr.co.pro_2.member_vo.MemberVO">
    select nickname from member where name=#{name} and email=#{email}
 </select>
</mapper>
